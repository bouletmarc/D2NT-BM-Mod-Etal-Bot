function NTMain(){
	Include("libs/common/NTCommon.ntl");
	NTC_IncludeLibs();

	NTC_IncludeConfig("NTBot/char_configs");
	NT_LoadConfig();

	NTSI_LoadNIPFiles("NTBot/item_configs");
	
	NTA_Initialize();
	
	NTTM_CheckAct();
	NTTMGR_TownManager();
	NTCS_TeleUp();
	NTCS_ClearEntrance();
	NTCS_OpenSealsInt();
