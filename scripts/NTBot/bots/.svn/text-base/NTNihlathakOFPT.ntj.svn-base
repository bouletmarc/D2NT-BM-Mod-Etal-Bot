		return;
	}
	if(!NTA_KillMonster(GetLocaleString(22497))){
		NTC_SendMsgToScript("NTBotGame.ntj", "NTA_KillMonster()");
		return;
	}
	if(NTConfig_ClearPosition)
	NTA_ClearPosition();
	NTSI_PickItems();
}

